<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90e0ef">

    <!-- Title TextView -->

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="sans-serif"
        android:text="BudgetBuddy"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#90e0ef"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Currency Converter Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currency Converter"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:textColor="#90e0ef"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount (INR):"
            android:textSize="18sp"
            android:textStyle="italic"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#90e0ef"/>

        <EditText
            android:id="@+id/amountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Enter amount in INR"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select currency:"
            android:textSize="18sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="#90e0ef"/>

        <Spinner
            android:id="@+id/currencySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="#F80000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Converted amount:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="#90e0ef"/>

        <EditText
            android:id="@+id/convertedAmountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:enabled="false"
            android:hint="Converted amount"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/convertButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALCULATE"



            android:layout_gravity="center_horizontal"
            android:backgroundTint="#c1121f"

            android:textColor="#003049"
            android:textSize="25dp"
            />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton2"

        android:layout_width="107dp"
        android:layout_height="67dp"
        android:backgroundTint="#90e0ef"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/back" />
</RelativeLayout>
